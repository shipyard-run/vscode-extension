{
  "name": "shipyard",
  "displayName": "shipyard",
  "description": "VSCode Extension for Shipyard",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "shipyard.reloadWorkspace",
        "title": "Shipyard: Reload the current workspace"
      }
    ],
    "configuration": [
      {
        "title": "Save and restore tabs",
        "properties": {
          "saveRestoreEditors.allowOverwrite": {
            "type": "boolean",
            "default": false,
            "description": "Save and restore tabs: allows overwriting of exiting saved group with the same name",
            "scope": "resource"
          },
          "saveRestoreEditors.confirmAction": {
            "type": "boolean",
            "default": true,
            "description": "Save and restore tabs: ask for confirmation of destructive actions",
            "scope": "resource"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.69.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
